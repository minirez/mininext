{
  "name": "booking-engine-api",
  "version": "1.0.0",
  "description": "Booking Engine API - Multi-tenant B2B/B2C Platform",
  "type": "module",
  "main": "src/index.js",
  "imports": {
    "#config": "./src/config/index.js",
    "#constants/*": "./src/constants/*",
    "#core/*": "./src/core/*",
    "#helpers": "./src/helpers/index.js",
    "#helpers/*": "./src/helpers/*",
    "#middleware/*": "./src/middleware/*",
    "#modules/*": "./src/modules/*",
    "#services/*": "./src/services/*",
    "#plugins/*": "./src/plugins/*",
    "#utils/*": "./src/utils/*"
  },
  "scripts": {
    "dev": "NODE_ENV=development node --watch src/index.js",
    "start": "NODE_ENV=production node src/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "booking",
    "hotel",
    "travel",
    "b2b",
    "b2c"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.957.0",
    "@aws-sdk/client-sesv2": "^3.958.0",
    "@booking-engine/constants": "workspace:*",
    "@booking-engine/validation": "workspace:*",
    "@google/genai": "^1.34.0",
    "@mendable/firecrawl-js": "^4.10.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "jsdom": "^25.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "soap": "^1.6.1",
    "socket.io": "^4.8.3",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2"
  }
}

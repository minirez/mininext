{
    "name": "booking-engine-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "dev:pm2": "pm2 start ecosystem.config.cjs",
        "dev:api": "cd apps/api && node --watch src/index.js",
        "dev:admin": "cd apps/admin && npx vite --host",
        "stop": "pm2 stop all",
        "restart": "pm2 restart all",
        "logs": "pm2 logs",
        "status": "pm2 status",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "turbo": "^2.0.0",
        "prettier": "^3.0.0"
    },
    "packageManager": "pnpm@9.15.4"
}